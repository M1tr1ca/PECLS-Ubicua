<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_main"
    android:padding="24dp"
    tools:context=".StreetSelection">

    <!-- Card principal con glassmorphism -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/glass_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Logo mejorado con borde profesional -->
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="55dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="24dp">
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/app_logo"
                    android:scaleType="centerCrop"
                    android:padding="12dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selector_txt"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue_dark"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”„ Cargando sensores..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <ProgressBar
                android:id="@+id/progressBarSelection"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:indeterminateTint="@color/primary_blue"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selector_description"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:alpha="0.9"
                android:layout_marginBottom="28dp"/>

            <!-- Spinner con efecto glass -->
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/glass_spinner"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

            <!-- BotÃ³n con efecto glass -->
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/boton_txt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_on_primary"
                android:background="@drawable/glass_button"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>