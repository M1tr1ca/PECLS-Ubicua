<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_main"
    tools:context=".WeatherStatsActivity">

    <!-- Header con gradiente mejorado -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/header_weather_gradient"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Bot贸n volver -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_back_circle"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:contentDescription="Volver"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Icono y t铆tulo -->
    <ImageView
        android:id="@+id/iconHeader"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_weather_station"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        app:tint="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estaci贸n Meteorol贸gica"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/iconHeader"
        app:layout_constraintTop_toTopOf="@id/iconHeader"
        app:layout_constraintBottom_toBottomOf="@id/iconHeader"/>

    <!-- Ubicaci贸n -->
    <ImageView
        android:id="@+id/iconLocation"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_location"
        app:tint="#B3E5FC"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconHeader"/>

    <TextView
        android:id="@+id/tvStreetName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calle seleccionada"
        android:textSize="14sp"
        android:textColor="#E3F2FD"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/iconLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iconLocation"
        app:layout_constraintBottom_toBottomOf="@id/iconLocation"/>

    <!-- Estado de conexi贸n -->
    <LinearLayout
        android:id="@+id/statusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/status_pill_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconLocation">

        <ImageView
            android:id="@+id/iconStatus"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_sync"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conectando..."
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="6dp"/>

    </LinearLayout>

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerBackground"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Grid de m茅tricas principales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Card Temperatura -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/glass_white_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/circle_temperature">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_temperature"
                                app:tint="@android:color/white"/>

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temperatura"
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:id="@+id/tvTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#263238"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="掳C"
                            android:textSize="14sp"
                            android:textColor="#90A4AE"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card Humedad -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="@color/glass_white_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/circle_humidity">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_humidity"
                                app:tint="@android:color/white"/>

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humedad"
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#263238"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="14sp"
                            android:textColor="#90A4AE"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Barra de progreso humedad -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/glass_white_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nivel de Humedad"
                        android:textSize="14sp"
                        android:textColor="#546E7A"
                        android:textStyle="bold"/>

                    <ProgressBar
                        android:id="@+id/progressHumidity"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_marginTop="12dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_humidity"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="0%"
                            android:textSize="10sp"
                            android:textColor="#90A4AE"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="50%"
                            android:textSize="10sp"
                            android:textColor="#90A4AE"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="100%"
                            android:textSize="10sp"
                            android:textColor="#90A4AE"
                            android:gravity="end"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Grid secundario: Presi贸n y Altitud -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Card Presi贸n -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@color/glass_white_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/circle_pressure">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_pressure"
                                app:tint="@android:color/white"/>

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Presi贸n"
                                android:textSize="11sp"
                                android:textColor="#78909C"/>

                            <TextView
                                android:id="@+id/tvPressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- hPa"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#263238"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card Altitud -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@color/glass_white_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <FrameLayout
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/circle_altitude">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_altitude"
                                app:tint="@android:color/white"/>

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Altitud"
                                android:textSize="11sp"
                                android:textColor="#78909C"/>

                            <TextView
                                android:id="@+id/tvAltitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- m"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#263238"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Card Historial -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/glass_white_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chart"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gr谩fica de Temperatura"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartTemperature"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card Gr谩fica Humedad -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/glass_white_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chart"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gr谩fica de Humedad"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chartHumidity"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card Panel de Control de Alertas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/glass_white_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- T铆tulo del panel -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_warning"
                            app:tint="#FF5722"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Control de Alertas ESP32"
                            android:textSize="16sp"
                            android:textColor="#37474F"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>

                        <!-- Indicador nivel actual -->
                        <TextView
                            android:id="@+id/tvCurrentAlertLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nivel: 0"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:background="@drawable/alert_level_indicator"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ECEFF1"
                        android:layout_marginVertical="12dp"/>

                    <!-- Descripci贸n -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selecciona un nivel de alerta para enviar al dispositivo:"
                        android:textSize="12sp"
                        android:textColor="#78909C"
                        android:layout_marginBottom="16dp"/>

                    <!-- Botones de niveles de alerta -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Nivel 0 - Normal -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btnAlert0"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/btn_alert_normal"
                                android:src="@drawable/ic_check"
                                android:scaleType="centerInside"
                                android:padding="12dp"
                                android:contentDescription="Normal"
                                app:tint="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Normal"
                                android:textSize="10sp"
                                android:textColor="#4CAF50"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                        <!-- Nivel 1 - Bajo -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btnAlert1"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/btn_alert_low"
                                android:src="@drawable/ic_info"
                                android:scaleType="centerInside"
                                android:padding="12dp"
                                android:contentDescription="Bajo"
                                app:tint="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bajo"
                                android:textSize="10sp"
                                android:textColor="#8BC34A"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                        <!-- Nivel 2 - Medio -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btnAlert2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/btn_alert_medium"
                                android:src="@drawable/ic_warning"
                                android:scaleType="centerInside"
                                android:padding="12dp"
                                android:contentDescription="Medio"
                                app:tint="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medio"
                                android:textSize="10sp"
                                android:textColor="#FFC107"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                        <!-- Nivel 3 - Alto -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btnAlert3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/btn_alert_high"
                                android:src="@drawable/ic_warning"
                                android:scaleType="centerInside"
                                android:padding="12dp"
                                android:contentDescription="Alto"
                                app:tint="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alto"
                                android:textSize="10sp"
                                android:textColor="#FF9800"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                        <!-- Nivel 4 - Cr铆tico -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btnAlert4"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/btn_alert_critical"
                                android:src="@drawable/ic_error"
                                android:scaleType="centerInside"
                                android:padding="12dp"
                                android:contentDescription="Cr铆tico"
                                app:tint="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cr铆tico"
                                android:textSize="10sp"
                                android:textColor="#F44336"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ECEFF1"
                        android:layout_marginVertical="16dp"/>

                    <!-- Bot贸n de Restart -->
                    <Button
                        android:id="@+id/btnRestart"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="  Reiniciar Sensor ESP32"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_restart"/>

                    <!-- Estado del env铆o -->
                    <TextView
                        android:id="@+id/tvAlertStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="#78909C"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card Historial de Lecturas -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/glass_white_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_history"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Historial de Lecturas"
                            android:textSize="14sp"
                            android:textColor="#37474F"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>
                        
                        <TextView
                            android:id="@+id/tvDataCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 registros"
                            android:textSize="11sp"
                            android:textColor="#90A4AE"
                            android:background="@drawable/badge_background"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ECEFF1"
                        android:layout_marginVertical="12dp"/>

                    <TextView
                        android:id="@+id/tvHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Esperando datos..."
                        android:textSize="12sp"
                        android:textColor="#607D8B"
                        android:fontFamily="monospace"
                        android:lineSpacingExtra="4dp"
                        android:minHeight="100dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
