<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <!-- Header ultra moderno con logo destacado -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:background="@drawable/header_gradient_menu"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Logo grande de la app -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logoCard"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/app_logo"
                android:scaleType="centerCrop"
                android:padding="4dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Textos del header con mejor espaciado -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/logoCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ—ºï¸ Mapa de Madrid"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.02"/>

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulsa en un marcador para ver sus sensores"
                android:textSize="13sp"
                android:textColor="#E3F2FD"
                android:alpha="0.95"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Status con mejor diseÃ±o -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âœ… 15 calles, 15 con sensores"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="10dp"
        android:gravity="center"
        android:background="#1E88E5"
        app:layout_constraintTop_toBottomOf="@id/header"/>

    <!-- OpenStreetMap View -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintBottom_toTopOf="@id/bottomPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Panel inferior con fondo azul claro -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp"
        android:background="#E3F2FD"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ O selecciona de la lista:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/primary_blue_dark"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/spinnerStreets"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/glass_spinner"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btnSelectStreet"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Ver sensores de esta calle"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/primary_blue"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
