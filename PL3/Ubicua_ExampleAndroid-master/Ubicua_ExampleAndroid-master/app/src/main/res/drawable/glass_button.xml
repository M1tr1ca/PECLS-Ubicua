<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">
    <item>
        <layer-list>
            <!-- Sombra -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <solid android:color="#20000000"/>
                </shape>
            </item>
            
            <!-- BotÃ³n glass -->
            <item
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <gradient
                        android:startColor="#E01E88E5"
                        android:endColor="#E042A5F5"
                        android:angle="135"/>
                    <stroke
                        android:width="1dp"
                        android:color="#60FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>

