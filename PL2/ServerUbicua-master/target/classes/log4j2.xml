<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    Configuración Log4j2 - Compatible con Windows y Linux/Docker
    Usa ${sys:catalina.base} para rutas relativas al servidor Tomcat
-->
<Configuration status="info">
    <Properties>
        <!-- Ruta base de logs - funciona en Windows y Linux -->
        <Property name="LOG_PATH">${sys:catalina.base}/logs/ubicomp</Property>
    </Properties>
    
    <Appenders>
        <!-- Appender de consola para desarrollo -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
        <!-- LOG GENERAL -->
        <RollingFile name="LogFile" 
                     fileName="${LOG_PATH}/log.log"
                     filePattern="${LOG_PATH}/archive/Ubicomp-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout
                pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
                header="-- UBICOMP SERVER EXAMPLE LOG --" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
        
        <!-- LOG MQTT -->
        <RollingFile name="LogFileMQTT" 
                     fileName="${LOG_PATH}/logmqtt.log"
                     filePattern="${LOG_PATH}/archive/Ubicompmqtt-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout
                pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
                header="-- UBICOMP SERVER EXAMPLE MQTT LOG --" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
        
        <!-- LOG DATABASE -->
        <RollingFile name="LogFileDB" 
                     fileName="${LOG_PATH}/logdb.log"
                     filePattern="${LOG_PATH}/archive/Ubicompdb-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout
                pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
                header="-- UBICOMP SERVER EXAMPLE DATABASE LOG --" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>
    
    <Loggers>
        <!-- LOG GENERAL - También a consola para desarrollo -->
        <Logger name="log" additivity="FALSE" level="DEBUG">
            <AppenderRef ref="LogFile" level="DEBUG" />
            <AppenderRef ref="Console" level="INFO" />
        </Logger>
        
        <!-- LOG MQTT -->
        <Logger name="logmqtt" additivity="FALSE" level="DEBUG">
            <AppenderRef ref="LogFileMQTT" level="DEBUG" />
            <AppenderRef ref="Console" level="INFO" />
        </Logger>
        
        <!-- LOG DATABASE -->
        <Logger name="logdb" additivity="FALSE" level="DEBUG">
            <AppenderRef ref="LogFileDB" level="DEBUG" />
            <AppenderRef ref="Console" level="INFO" />
        </Logger>
        
        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
